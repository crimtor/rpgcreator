<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Post a New Beer</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/beers" method="POST">
                 <div class="form-group">
                    <label for="brewery">Brewery Name</label>
                    <input class="form-control" type="text" name="brewery" id="brewery" placeholder="Russian River">
                </div>
                <div class="form-group">
                    <label for="name">Name</label>
                    <input class="form-control" type="text" name="name" id="name" placeholder="Pliny the Elder">
                </div>
                <div class="form-group">
                    <label for="image">Image Url</label>
                    <input class="form-control" type="text" name="image" id="image" pattern="^https:\/\/images\.unsplash\.com\/.*" title="Only images from images.unsplash.com allowed. See link below for instructions." placeholder="https://images.unsplash.com/..." required>
                    <small>Click <a href="https://youtu.be/Bn3weNRQRDE">here</a> for tutorial on how to copy unsplash urls.</small>
                </div>
                <div class="form-group">
                    <label for="rating">Rating</label>
                    <input class="form-control" type="number" name="rating" id="rating" placeholder="5.0" step="0.25" min="0.25" max="5.0" required>
                </div>
                <div class="form-group">
                    <label for="cost">Cost</label>
                    <input class="form-control" type="number" name="cost" id="cost" placeholder="9.99" step="0.01" min="0" required>
                </div>
                <div class="form-group">
                    <label for="style">Description</label>
                    <input class="form-control" type="text" name="style" id="style" placeholder="West Coast IPA">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="description" id="description" placeholder="One of the best rated West Coast IPA in the World">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/beers">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>